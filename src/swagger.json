{
  "openapi": "3.0.0",
  "info": {
    "title": "Node.js CRUD API",
    "version": "1.0.0",
    "description": "A simple CRUD API using Node.js, Express and MongoDB"
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "tags": [
    {
      "name": "Item",
      "description": "Operations related to items"
    },
    {
      "name": "Category",
      "description": "Operations related to categories"
    }
  ],
  "paths": {
    "/api/items": {
      "get": {
        "tags": ["Item"],
        "summary": "Get all items",
        "responses": {
          "200": {
            "description": "List of items"
          }
        }
      },
      "post": {
        "tags": ["Item"],
        "summary": "Create a new item",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "quantity": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Item created"
          }
        }
      }
    },
    "/api/items/{id}": {
      "get": {
        "tags": ["Item"],
        "summary": "Get item by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Item data" }
        }
      },
      "put": {
        "tags": ["Item"],
        "summary": "Update an item",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "quantity": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Item updated" }
        }
      },
      "delete": {
        "tags": ["Item"],
        "summary": "Delete an item",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Item deleted" }
        }
      }
    },

    "x-comment": "Category endpoints added below",
    "/api/categories": {
      "get": {
        "tags": ["Category"],
        "summary": "Get all categories",
        "responses": {
          "200": {
            "description": "List of categories"
          }
        }
      },
      "post": {
        "tags": ["Category"],
        "summary": "Create a new category",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "categoryName": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Category created"
          }
        }
      }
    },
    "/api/categories/{id}": {
      "get": {
        "tags": ["Category"],
        "summary": "Get category by ID",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Category data" }
        }
      },
      "put": {
        "tags": ["Category"],
        "summary": "Update a category",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Category updated" }
        }
      },
      "delete": {
        "tags": ["Category"],
        "summary": "Delete a category",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Category deleted" }
        }
      }
    }

  }
}
